root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[{.eslintrc.cjs,.prettierrc.json,package.json,tsconfig.json}]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

[.github/workflows/**.yml]
indent_size = 2
indent_style = space

[src/**.cts]
indent_size = 2
indent_style = space

[src/**.mts]
indent_size = 2
indent_style = space

[src/**.ts]
indent_size = 2
indent_style = space

[{wasm/asconfig.json,wasm/tsconfig.json}]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

[wasm/src/**.ts]
indent_size = 2
indent_style = space
